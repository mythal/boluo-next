{
  "name": "boluo-next",
  "description": "The next generation of RPG tools",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "next dev",
    "build": "yarn run i18n:compile && next build",
    "start": "next start",
    "lint": "next lint",
    "i18n:extract": "formatjs extract 'src/**/*.ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format crowdin",
    "i18n:compile": "formatjs compile-folder --ast --format crowdin ./lang ./lang/compiled",
    "format": "prettier --write --config ./.prettierrc .",
    "precommit": "yarn run format && yarn run i18n:extract && yarn run i18n:compile",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@react-aria/switch": "^3.1.3",
    "color2k": "^1.2.4",
    "jotai": "^1.3.1",
    "modern-normalize": "^1.1.0",
    "next": "11.1.0",
    "optics-ts": "^2.1.0",
    "react": "^17.0.2",
    "react-colorful": "^5.3.0",
    "react-dom": "17.0.2",
    "react-intl": "^5.20.10"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@formatjs/cli": "^4.2.33",
    "@svgr/webpack": "^5.5.0",
    "@types/node": "16.7.2",
    "@types/react": "17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-plugin-formatjs": "^10.3.7",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "prettier": "^2.3.2",
    "typescript": "4.3.5"
  }
}
