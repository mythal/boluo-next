{
  "name": "boluo-next",
  "description": "The next generation of RPG tools",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "next dev",
    "prebuild": "yarn run i18n:compile",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "i18n:extract": "formatjs extract 'src/**/*.ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format crowdin",
    "i18n:compile": "formatjs compile-folder --ast --format crowdin ./lang ./lang/compiled",
    "format": "prettier --write --config ./.prettierrc .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dnd-kit/core": "^4.0.1",
    "@dnd-kit/sortable": "^5.0.0",
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@popperjs/core": "^2.10.2",
    "@react-aria/switch": "^3.1.3",
    "color2k": "^1.2.4",
    "jotai": "^1.4.2",
    "modern-normalize": "^1.1.0",
    "next": "^12.0.3",
    "optics-ts": "^2.2.2",
    "react": "^17.0.2",
    "react-colorful": "^5.5.0",
    "react-dom": "17.0.2",
    "react-intl": "^5.21.0",
    "react-popper": "^2.2.5",
    "react-virtuoso": "^2.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@formatjs/cli": "^4.4.0",
    "@svgr/webpack": "^5.5.0",
    "@types/node": "16.11.6",
    "@types/react": "17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "babel-plugin-formatjs": "^10.3.11",
    "eslint": "<8.0.0",
    "eslint-config-next": "12.0.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "typescript": "4.4.4"
  }
}
