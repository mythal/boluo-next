{
  "name": "boluo-next",
  "description": "The next generation of RPG tools",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "next dev",
    "prebuild": "yarn run i18n:compile",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "i18n:extract": "formatjs extract 'src/**/*.ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format crowdin",
    "i18n:compile": "formatjs compile-folder --ast --format crowdin ./lang ./lang/compiled",
    "format": "prettier --write --config ./.prettierrc .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dnd-kit/core": "^5.0.1",
    "@dnd-kit/sortable": "^6.0.0",
    "@emotion/cache": "^11.7.1",
    "@emotion/css": "^11.7.1",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@popperjs/core": "^2.11.2",
    "color2k": "^1.2.5",
    "modern-normalize": "^1.1.0",
    "next": "^12.0.10",
    "optics-ts": "^2.3.0",
    "react": "^17.0.2",
    "react-colorful": "^5.5.1",
    "react-dom": "^17.0.2",
    "react-intl": "^5.24.4",
    "react-popper": "^2.2.5",
    "react-virtuoso": "^2.5.2",
    "styled-jsx": "^5.0.0",
    "swr": "^1.2.1",
    "zustand": "^3.6.9"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/eslint-plugin": "^11.7.0",
    "@formatjs/cli": "^4.8.1",
    "@svgr/webpack": "6.2.1",
    "@types/node": "^17.0.17",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "babel-plugin-formatjs": "^10.3.17",
    "eslint": "^8.8.0",
    "eslint-config-next": "^12.0.10",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "4.5.5"
  }
}
