{
  "name": "boluo-next",
  "description": "The next generation of RPG tools",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "next dev",
    "prebuild": "yarn run i18n:compile",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "i18n:extract": "formatjs extract 'src/**/*.ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format crowdin",
    "i18n:compile": "formatjs compile-folder --ast --format crowdin ./lang ./lang/compiled",
    "format": "prettier --write --config ./.prettierrc .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dnd-kit/core": "^4.0.3",
    "@dnd-kit/sortable": "^5.1.0",
    "@emotion/cache": "^11.6.0",
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@popperjs/core": "^2.11.0",
    "@types/react-dom": "^17.0.11",
    "color2k": "^1.2.4",
    "jotai": "^1.4.6",
    "modern-normalize": "^1.1.0",
    "next": "^12.0.7",
    "optics-ts": "^2.2.2",
    "react": "^17.0.2",
    "react-colorful": "^5.5.1",
    "react-dom": "^17.0.2",
    "react-intl": "^5.23.0",
    "react-popper": "^2.2.5",
    "react-virtuoso": "^2.3.1",
    "styled-jsx": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/eslint-plugin": "^11.7.0",
    "@formatjs/cli": "^4.5.0",
    "@svgr/webpack": "6.1.1",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "babel-plugin-formatjs": "^10.3.12",
    "eslint": "^8.4.1",
    "eslint-config-next": "^12.0.7",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.2",
    "typescript": "4.5.2"
  }
}
